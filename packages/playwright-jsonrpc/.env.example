# Server Configuration
PORT=3337
NODE_ENV=development

# Security Configuration
API_KEY=your-secure-api-key-here
ALLOW_HOST_REGEX=^https?://(localhost|127\\.0\\.0\\.1)(:\\d+)?/

# Session Management
SESSION_TTL_MS=120000
MAX_CONCURRENT_SESSIONS=8

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=120

# Playwright Configuration
HEADLESS=true
BROWSER_ARGS=--disable-dev-shm-usage,--no-sandbox

# Request Configuration
MAX_REQUEST_SIZE=512kb
REQUEST_TIMEOUT=45000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring (optional)
METRICS_ENABLED=false
METRICS_PORT=9090

# WebSocket (optional, for future streaming support)
WEBSOCKET_ENABLED=false
WEBSOCKET_PATH=/ws

# Resource Limits
MAX_SCREENSHOT_SIZE_MB=10
MAX_TEXT_CHARS=90000
MAX_HTML_SIZE_MB=5

# Browser Context Defaults
DEFAULT_VIEWPORT_WIDTH=1280
DEFAULT_VIEWPORT_HEIGHT=800
DEFAULT_USER_AGENT=Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/119.0.0.0 Safari/537.36

# Network Configuration
IGNORE_HTTPS_ERRORS=true
BYPASS_CSP=false

# Debug Options
DEBUG_MODE=false
SAVE_TRACES=false
TRACE_DIR=./traces