# Server Configuration
PORT=8080

# Domain Configuration (Production Only)
# Set your production domain name here. Used for:
# - HTTPS redirect URLs when SSL is enabled
# - BASE_URL construction when SSL certificates are detected
# - Email link generation in production mode
# Leave empty for development (defaults to localhost)
# Example: DOMAIN=example.com
# DOMAIN=

# Database Configuration
# Development mode uses DB_PATH, production mode uses DB_PATH_PRODUCTION
DB_PATH=./data/otc.db
# DB_PATH_PRODUCTION=./data/otc-production.db  # Uncomment for production

LOG_LEVEL=info
BASE_URL=http://localhost:8080

# Production Mode Configuration (Optional)
# Set to true to enable production mode with chain/asset restrictions
# PRODUCTION_MODE=true
#
# # Allowed chains (comma-separated chain IDs)
# # Production chains only (testnet chains like SEPOLIA should not be included)
# # Example: UNICITY,ETH,POLYGON
# ALLOWED_CHAINS=UNICITY,ETH,POLYGON
#
# # Allowed assets (comma-separated in format ASSET@CHAIN or ERC20:ADDRESS@CHAIN)
# # ETH mainnet: ETH@ETH, ERC20:0xdAC17F958D2ee523a2206206994597C13D831ec7@ETH (USDT)
# # Polygon: MATIC@POLYGON, ERC20:0xc2132D05D31c914a87C6611C10748AEb04B58e8F@POLYGON (USDT)
# # Example: ALPHA@UNICITY,ETH@ETH,ERC20:0xdAC17F958D2ee523a2206206994597C13D831ec7@ETH,MATIC@POLYGON
# ALLOWED_ASSETS=ALPHA@UNICITY,ETH@ETH,ERC20:0xdAC17F958D2ee523a2206206994597C13D831ec7@ETH,MATIC@POLYGON
#
# # Asset amount limits (per asset, applies when PRODUCTION_MODE=true)
# # Format: MAX_AMOUNT_<ASSET_SYMBOL> where symbol is from assets.json or token symbol
# MAX_AMOUNT_ALPHA=100           # Maximum ALPHA (Unicity native)
# MAX_AMOUNT_ETH=1               # Maximum ETH (Ethereum native)
# MAX_AMOUNT_MATIC=1000          # Maximum MATIC (Polygon native)
# MAX_AMOUNT_USDT=1000           # Maximum USDT (applies to all chains: Ethereum and Polygon)

# Hot Wallet Seed (for generating escrow addresses)
HOT_WALLET_SEED=your-secure-seed-phrase-here

# Tank Wallet Configuration (for gas funding)
TANK_WALLET_PRIVATE_KEY=0x_YOUR_TANK_WALLET_PRIVATE_KEY_HERE
ETH_GAS_FUND_AMOUNT=0.01        # ETH to send for gas funding
POLYGON_GAS_FUND_AMOUNT=0.5     # MATIC to send for gas funding
ETH_LOW_GAS_THRESHOLD=0.1       # Alert when tank ETH balance is below this
POLYGON_LOW_GAS_THRESHOLD=5     # Alert when tank MATIC balance is below this

# Unicity Configuration (MANDATORY)
UNICITY_ELECTRUM=wss://electrum.unicity.io:50002
UNICITY_CONFIRMATIONS=6
UNICITY_COLLECT_CONFIRMS=6
UNICITY_OPERATOR_ADDRESS=UNI_YOUR_OPERATOR_ADDRESS_HERE

# Ethereum Configuration (Optional)
ETH_RPC=http://localhost:8545
ETH_CONFIRMATIONS=3
ETH_COLLECT_CONFIRMS=3
ETH_OPERATOR_ADDRESS=0x_YOUR_ETH_OPERATOR_ADDRESS_HERE
ETH_OPERATOR_PRIVATE_KEY=0x_YOUR_PRIVATE_KEY_HERE
ETH_BROKER_ADDRESS=0x_YOUR_ETH_BROKER_CONTRACT_ADDRESS  # UnicitySwapBroker on Ethereum mainnet
ETH_ERC20_FEE=0.5               # Fixed fee in swap currency (e.g., 0.5 USDT for USDT swaps)

# Etherscan API V2 Configuration (Optional)
# A single ETHERSCAN_API_KEY works for all chains (Ethereum, Polygon, BSC, Base, etc.)
# Individual chain-specific keys (POLYGONSCAN_API_KEY, BSCSCAN_API_KEY) are also supported for backward compatibility
ETHERSCAN_API_KEY=YOUR_ETHERSCAN_API_KEY

# Polygon Configuration (Optional)
POLYGON_RPC=https://polygon-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
# POLYGONSCAN_API_KEY is optional - ETHERSCAN_API_KEY works for all chains in V2
POLYGONSCAN_API_KEY=YOUR_POLYGONSCAN_API_KEY
POLYGON_CONFIRMATIONS=64
POLYGON_COLLECT_CONFIRMS=64
POLYGON_OPERATOR_ADDRESS=0x_YOUR_POLYGON_OPERATOR_ADDRESS_HERE
POLYGON_OPERATOR_PRIVATE_KEY=0x_YOUR_PRIVATE_KEY_HERE
POLYGON_BROKER_ADDRESS=0x_YOUR_POLYGON_BROKER_CONTRACT_ADDRESS  # UnicitySwapBroker on Polygon
POLYGON_ERC20_FEE=0.001         # Fixed fee in swap currency (e.g., 0.001 USDT for USDT swaps)

# Sepolia Testnet Configuration (Optional, for testing)
SEPOLIA_RPC=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
SEPOLIA_CONFIRMATIONS=3
SEPOLIA_COLLECT_CONFIRMS=3
SEPOLIA_OPERATOR_ADDRESS=0x_YOUR_SEPOLIA_OPERATOR_ADDRESS_HERE
SEPOLIA_BROKER_ADDRESS=0x_DEPLOYED_BROKER_CONTRACT_ADDRESS_HERE

# BNB Smart Chain Configuration (Optional)
BSC_RPC=https://bnb-mainnet.g.alchemy.com/v2/9LkJ1e22_qxEBFxOQ4pD3
BSC_CONFIRMATIONS=12
BSC_COLLECT_CONFIRMS=12
BSC_OPERATOR_ADDRESS=0x_YOUR_BSC_OPERATOR_ADDRESS_HERE
# BSC_OPERATOR_PRIVATE_KEY=0x_YOUR_PRIVATE_KEY_HERE
# BSC_BROKER_ADDRESS=0x_YOUR_BSC_BROKER_CONTRACT_HERE

# Email Configuration (Optional)
EMAIL_ENABLED=false
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=your-email@gmail.com
EMAIL_SMTP_PASS=your-app-password