# Server Configuration
PORT=8080
DB_PATH=./data/otc.db
LOG_LEVEL=info
BASE_URL=http://localhost:8080

# Hot Wallet Seed (for generating escrow addresses)
HOT_WALLET_SEED=your-secure-seed-phrase-here

# Unicity Configuration (MANDATORY)
UNICITY_ELECTRUM=wss://electrum.unicity.io:50002
UNICITY_CONFIRMATIONS=6
UNICITY_COLLECT_CONFIRMS=6
UNICITY_OPERATOR_ADDRESS=UNI_YOUR_OPERATOR_ADDRESS_HERE

# Ethereum Configuration (Optional)
ETH_RPC=http://localhost:8545
ETH_CONFIRMATIONS=3
ETH_COLLECT_CONFIRMS=3
ETH_OPERATOR_ADDRESS=0x_YOUR_ETH_OPERATOR_ADDRESS_HERE
ETH_FEEPAYER_KEYREF=feepayer_eth

# Polygon Configuration (Optional)
POLYGON_RPC=https://polygon-rpc.com
POLYGON_CONFIRMATIONS=64
POLYGON_COLLECT_CONFIRMS=64
POLYGON_OPERATOR_ADDRESS=0x_YOUR_POLYGON_OPERATOR_ADDRESS_HERE

# Email Configuration (Optional)
EMAIL_ENABLED=false
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=your-email@gmail.com
EMAIL_SMTP_PASS=your-app-password